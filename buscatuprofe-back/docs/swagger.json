                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Clase guardada correctamente",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "400": {
                        "description": "Datos invalidos o faltantes",
                        "schema": {
                            "$ref": "#/definitions/models.ErrorResponse"
                        }
